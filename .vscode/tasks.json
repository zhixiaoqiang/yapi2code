{
  "version": "2.0.0",
  "tasks": [
      {
          // 定义 npm: watch
          "label": "start watch",
          "type": "shell",
          "command": "source ~/.zshrc && nvm use 16 && npm run watch",
          "problemMatcher": {
              "owner": "typescript",
              "pattern":[
                  {
                      "regexp": "\\[tsl\\] ERROR",
                      "file": 1,
                      "location": 2,
                      "message": 3
                  }
              ],
              "background": {
                  "activeOnStart": true,
                  // 通过对 rspack 的输出内容进行匹配，得知编译是否完成
                  "beginsPattern": "rspack compiled successfully .*",
                  "endsPattern": "ms"
              }
          },
          "options": {
            "env": {
              "NODE_ENV": "development",
              "DEBUG": "*"
            }
          },
          "isBackground": true,
          "presentation": {
              "reveal": "never"
          },
          "group": {
              "kind": "build",
              "isDefault": true
          }
      }
  ],
  "runtimeVersion": "2.0.0"
}